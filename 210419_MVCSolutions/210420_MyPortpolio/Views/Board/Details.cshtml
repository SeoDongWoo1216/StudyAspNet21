@model _210420_MyPortpolio.Models.Board

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts" style="padding: 40px 0;">
            <div class="row">
                <div class="col-md-11 ml-auto mr-auto">
                    <h2 class="text-center" style="font-weight: bold; color: black; margin-top: 0px">Board</h2>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Subject)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Subject)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Contents)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.Contents)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Writer)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Writer)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.RegDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RegDate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ReadCount)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ReadCount)
                        </dd>
                    </dl>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a> |
                        <a asp-action="Index" class="btn btn-light">뒤로</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
